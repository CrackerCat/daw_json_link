name: CI

on: [push]

jobs:
  build:

    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v1
    - name: Download & Build Dependencies
      run: |
        sudo apt update
        sudo apt install libboost-all-dev libcurl4-openssl-dev 
    - name: Download Current CMake
      run: |
        sudo apt purge cmake
        wget https://github.com/Kitware/CMake/releases/download/v3.14.7/cmake-3.14.7.tar.gz
        tar xzf cmake-3.14.7.tar.gz
        rm cmake-3.14.7.tar.gz
    - name: Build Current CMake
      working-directory: cmake-3.14.7
      run: |
        ./bootstrap
        make
        sudo make install      
    - name: Run make_deps
      run: ./make_deps.sh
    - name: Configure
      working-directory: build
      run: cmake -DCMAKE_BUILD_TYPE=Debug ..
    - name: Build project
      working-directory: build      
      run: cmake --build . --config Debug -j 2
    - name: Test
      working-directory: build      
      run: ctest
